    {
        // Use IntelliSense to learn about possible attributes.
        // Hover to view descriptions of existing attributes.
        // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Run ts-node-esm",
                "runtimeExecutable": "ts-node-esm",
                "cwd": "${workspaceFolder}",
                "args": []
            },
            {
                "name": "Attach",
                "port": 9229,
                "request": "attach",
                "skipFiles": [
                    "<node_internals>/**"
                ],
                "type": "node"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "Debug TS-ESM",
                "runtimeArgs": [
                    "--loader",
                    "ts-node/esm"
                ],
                "args": [
                    "${workspaceFolder}/src/app.ts"
                ],
                "cwd": "${workspaceFolder}",
                "autoAttachChildProcesses": true,
                "sourceMaps": true
            }
        ]
    }